    <%= form.text_area :description , class:"form-control", style:"height:50px" %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :name,{},class: "form-control" %>
  </div>



  <div class="field">
    <%= form.label :image %>
