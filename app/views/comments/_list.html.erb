<div class="text-left">
<h3 class="mb-5">Comments</h3>
<ul class="comment-list">
  <li class="comment">
    <% @article.comments.each do |comment| %>

      <div class="comment-body">
    <div class="meta text-black">
      <%= comment.user.email %>
    </div>

    <p>
      <%= comment.content %>
    </p>
    </div>
    <% end %>
  </li>
</ul>
</div>