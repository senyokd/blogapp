<%= form_with(model: comment, local: true) do |form| %>


  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :content, class:"form-control" %>
  </div>
  <br>

  <%= hidden_field_tag 'comment[article_id]', current_user.id %>


<br>
  <div class="actions">
    <%= form.submit class:"btn btn-primary btn-lg" %>
  </div>
<% end %>
